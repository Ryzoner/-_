@page "/MeasuresView"
@using SKIV.Components.Models
@using SKIV.Components.Service
@inject MeasureService MeasureService;

<h3>Measures</h3>

@if (_measures.Count == 0)
{
    <p>No measures found.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Measure Name</th>
            <th>Organizer</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Time</th>
            <th>Place</th>
            <th>Address</th>
            <th>Total Participants</th>
            <th>Contact Full Name</th>
            <th>Contact Phone Number</th>
            <th>Contact Email</th>
            <th>Total Volunteers</th>
            <th>Volunteers With Disabilities</th>
            <th>DobroRu</th>
            <th>LP</th>
            <th>LR</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var measure in _measures)
            {
                <tr>
                    <td>@measure.IdMeasure</td>
                    <td>@measure.MeasureName</td>
                    <td>@measure.Organizer</td>
                    <td>@measure.StartDate</td>
                    <td>@measure.EndDate</td>
                    <td>@measure.Time</td>
                    <td>@measure.Place</td>
                    <td>@measure.Address</td>
                    <td>@measure.TotalParticipants</td>
                    <td>@measure.ContactFullName</td>
                    <td>@(measure.ContactPhoneNumber != null ? measure.ContactPhoneNumber.ToString() : "")</td>
                    <td>@measure.ContactEmail</td>
                    <td>@measure.TotalVolunteers</td>
                    <td>@measure.VolunteersWithDisabilities</td>
                    <td>@measure.DobroRu</td>
                    <td>@(measure.LP ? "Yes" : "No")</td>
                    <td>@(measure.LR ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Measure> _measures;

    protected override void OnInitialized()
    {
        _measures = MeasureService.GetMeasures();
    }
}